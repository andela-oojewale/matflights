<div class="navbar-fixed">
  <nav>
    <div class="nav-wrapper">
      <div class="row">
        <%= link_to "MatFlights", root_path, { class: "brand-logo col l5 offset-l1 s5 left" } %>
      <% if current_user %>
        <ul class="right col l5 offset-l1 s8">
          <li><%= link_to "All Flights", index_path %></li>
          <li><%= link_to "Search Flights", root_path %></li>
          <li>
             <%= link_to raw("<i class='fa fa-caret-down right'></i> #{session[:name]}"), "#", { class: "dropdown-button", :data => {:activates => "dropdown1"} } %>
            <ul id="dropdown1" class="dropdown-content">
              <li><%= link_to "Past booking", dashboard_path %></li>
              <li><%= link_to "Manage booking", edit_path %></li>
              <li><%= link_to "Logout", logout_path %></li>
            </ul>
          </li>
          <li><a href="/dashboard"><%= get_user_image(session[:image]) %></a></li>
        </ul>
      <%  else %>
        <ul class="right col l3 offset-l3 s7">
          <li><%= link_to "All Flights", index_path %></li>
          <li><a class="modal-trigger" href="#modal1">Login</a></li>
        </ul>
        <% end %>
      </ul>
      </div>
    </div>
  </nav>
</div>

<div id="modal1" class="modal">
  <div class="modal-content row">
    <p>&nbsp;</p>
    <div class="col l2 offset-l1 s12">
      <a href="/auth/google_oauth2" class="waves-effect waves-light btn red darken-2">Google</a>
    </div>
    <div class="col l2 offset-l3 s12">
      <a href="/auth/facebook" class="waves-effect waves-light btn  blue darken-4">Facebook</a>
    </div>
  </div>
</div>