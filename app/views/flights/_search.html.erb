<div class="booking_form col l6 offset-l3 s12">
  <div class="row">
    <h3 class="col offset-l1"> Search for flights</h3>
    <% flash.each do | name, msg | -%>
      <%= content_tag :h6, msg, class: [name, "col offset-l1"] %>
    <% end -%>

    <%= form_tag("/search", method: "post") do %>
    <%= get_all_airports(
      :from_id,
      "Select Departure Airtport",
      "browser-default col l9 offset-l1 s12 left"
    ) %>
    <br/>
    <%= get_all_airports(
      :to_id,
      "Select Destination Airtport",
      "browser-default col l9 offset-l1 s12 left")
    %>
      <br/>
    <%= label_tag(
      :dept_time,
      "Departure Date",
      { class: "box-default col l4 offset-l1 left"}
    )%>
    <%= label_tag(
      :ret_time,
      "Return Date",
      { class: "box-default col l4 offset-l1 left"}
    )%>
    <%= date_field(
      :flight,
      :dept_time,
      { class: "box-default col l4 offset-l1 left datepicker"}
    )%>
    <%= date_field(
      :flight,
      :ret_time,
      {class: "box-default col l4 offset-l1 left datepicker"}
    )%> <br/>

    <%= get_dropdown(
      :adults,
      1,
      5,
      "Adult(s)",
      "browser-default col l2 offset-l1 left"
    )%>

    <%= get_dropdown(
      :children,
      1,
      5,
      "Children",
      "browser-default col l3 offset-l1 left")
    %>

    <%= select_tag(
      :class,
      options_for_select([
        ["Economy", "Economy", {class: "class_name"}],
        ["Business", "Business", {class: "class_name"}],
        ["Executive", "Executive", {class: "class_name"}]
      ]),
      {class: "browser-default col l2 offset-l1 left", prompt: "Class"}
    )%> <br/>
    <p class="col offset-l1 left">
    <button class="btn waves-effect waves-light blue " type="submit" name="search_flight">Search Flight
      <i class="material-icons right">send</i>
    </button>
  </p>

  <% end %>
  </div>
  </div>